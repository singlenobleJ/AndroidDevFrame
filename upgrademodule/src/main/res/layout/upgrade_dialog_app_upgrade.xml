<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/bg_upgrade">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_ota" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_bg"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="22dp"
            android:textColor="#e6ebf5ff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/bg_upgrades"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="#ffffff"
            android:textSize="17sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_update"
            android:layout_below="@id/iv_bg"
            android:layout_marginTop="20dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">


        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_close" />

    </LinearLayout>

</LinearLayout>